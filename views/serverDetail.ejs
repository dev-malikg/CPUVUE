    <!-- Main Heading and Description -->
    <p class="main_heading">System Health Overview</p>
    <p class="description">Welcome to the Server Statistics Dashboard! Monitor your server's health, track
        trends, and make informed decisions to optimize its performance.</p>
    <div class="line"></div>

    <!-- Main Data Display -->
    <div class="mainData">
        <div class="labelss">
            <!-- Labels for CPU, Cores, Up Time, Memory, Total Memory, and IP -->
            <p class="labl">Cpu</p>
            <p class="labl">Cores</p>
            <p class="labl">Up Time</p>
            <p class="labl">Memory</p>
            <p class="labl">Total Memory</p>
            <p class="labl">Ip</p>
        </div>
        <div class="ddaattaa">
            <!-- Dynamic Data Displayed -->
            <p class="ld">
                <%= cpu %>
            </p>
            <p class="ld">
                <%= cores %> Cores
            </p>
            <p class="ld" id="clock">24:43:12
            </p>
            <p class="ld" id="mem">24% (0.7/4 GB)</p>
            <p class="ld" id="totalmem">24% (0.7/4 GB)</p>
            <p class="ld">
                <%= ip %>
            </p>
        </div>
    </div>

    <!-- Server Status Display -->
    <div class="server">
        <div class="lOne">
            <!-- Lights and Bars for Server Status -->
            <div class="bar1-1" id="b1-1"></div>
            <div class="light1-1" id="l1-1"></div>
            <div class="light1-2" id="l1-2"></div>
            <div class="light1-3" id="l1-3"></div>
        </div>
        <div class="lTwo">
            <!-- Lights and Bars for Server Status -->
            <div class="light2-1" id="l2-1"></div>
            <div class="light2-2" id="l2-2"></div>
            <div class="bar2-1" id="b2-1"></div>
        </div>
        <div class="lThree">
            <!-- Ethernet and Lights for Server Status -->
            <div class="eth3-1" id="e3-1">
                <div class="ineth"></div>
                <div class="e1l1" id="e1l1"></div>
                <div class="e1l2" id="e1l2"></div>
            </div>
            <div class="eth3-2" id="e3-1">
                <div class="ineth"></div>
                <div class="e1l1" id="e2l1"></div>
                <div class="e1l2" id="e2l2"></div>
            </div>
            <!-- Bars and Lights for Server Status -->
            <div class="bar3-1" id="b3-1"></div>
            <div class="bar3-2" id="b3-2"></div>
            <div class="light3-1" id="l3-1"></div>
            <div class="light3-2" id="l3-2"></div>
        </div>
    </div>

    <!-- Script for Formatting Uptime -->
    <script>
        const formatUptime = (uptime) => {
            const seconds = Math.floor(uptime % 60);
            const minutes = Math.floor((uptime / 60) % 60);
            const hours = Math.floor((uptime / 3600) % 24);
            const days = Math.floor(uptime / 86400);

            return `${days} days, ${hours} hours, ${minutes} minutes, ${seconds} seconds`;
        };
    </script>

    <!-- JavaScript Script -->
    <script src="serverDetail.js"></script>

